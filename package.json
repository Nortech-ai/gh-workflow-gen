{
  "name": "@nortech/gh-workflow-gen",
  "version": "0.1.0",
  "description": "Generate GitHub Workflows based on JavaScript or TypeScript templates.",
  "author": "Wardell Bagby",
  "homepage": "https://github.com/wardellbagby/gh-workflow-gen",
  "repository": {
    "type": "git",
    "url": "https://github.com/nortech-ai/gh-workflow-gen"
  },
  "files": [
    "src",
    "dist",
    "examples"
  ],
  "keywords": [
    "github workflows",
    "github",
    "workflow",
    "gh"
  ],
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "yarn tsup src/* --sourcemap inline",
    "test": "node --no-warnings --loader ts-node/esm test/test_runner.ts",
    "prepare": "husky install",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14.18.0"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "tsup": "^7.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.28",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.0-beta"
  }
}
