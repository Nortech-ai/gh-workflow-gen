{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "noEmitHelpers": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": false,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["es2015"],
    "rootDir": "."
  }
}
